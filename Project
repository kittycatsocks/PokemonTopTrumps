import random
import requests


def random_pokemon():
  pokedex_number = random.randint(1, 151)
  url = 'https://pokeapi.co/api/v2/pokemon/{}/'.format(pokedex_number)
  response = requests.get(url)
  pokemon_stats = response.json()
  return {'name' : pokemon_stats['name'], 'id' : pokemon_stats['id'], 'height' : pokemon_stats['height'], 'weight' : pokemon_stats['weight'],}



def run():
  player_one_pokemon = random_pokemon()
  print("You were given {}".format(player_one_pokemon))
  player_two_pokemon = random_pokemon()
  print("Your opponent was given {}".format(player_two_pokemon['name']))
  chosen_stat = input("Which stats would you like to choose? select either id, height or weight ")
  player_one_stat = player_one_pokemon[chosen_stat]
  player_two_stat = player_two_pokemon[chosen_stat]
  if player_one_stat > player_two_stat:
    print ("You win! Your Pokemon's {} was {} and your opponents was {}".format(chosen_stat, player_one_stat, player_two_stat))
  else:
    print ("You lose! Your Pokemon's {} was {} and your opponents was {}".format(chosen_stat, player_one_stat, player_two_stat))




run()
